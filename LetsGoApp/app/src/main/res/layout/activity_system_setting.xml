<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <com.njz.letsgoapp.widget.MineItemView
            android:id="@+id/system_setting_clean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:left_drawable="@mipmap/ic_arrow_right"
            app:content_color="@color/color_99"
            app:title="清理缓存" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_d9"/>

        <com.njz.letsgoapp.widget.MineItemView
            android:id="@+id/system_setting_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:left_drawable="@mipmap/ic_arrow_right"
            app:title="意见反馈" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_d9"/>

        <com.njz.letsgoapp.widget.MineItemView
            android:id="@+id/system_setting_about"
            android:layout_width="match_parent"
            app:content_color="@color/color_99"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:left_drawable="@mipmap/ic_arrow_right"
            app:title="关于我们" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_d9"/>

        <com.njz.letsgoapp.widget.MineItemView
            android:id="@+id/system_setting_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:title="检测升级" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_d9"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_loginoff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_theme_solid_r40"
        android:text="退出登录"
        android:layout_gravity="bottom"
        android:textColor="@color/white" />

</FrameLayout>


